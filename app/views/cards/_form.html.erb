<%= form_for(@card, html: { class: "form-horizontal", role: "form" }) do |f| %>
  <% if @card.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@card.errors.count, "error") %> prohibited this card from being saved:</h4>

      <ul>
      <% @card.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :card_name, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :card_name, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :name, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :name, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :profession, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :profession, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :email, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :email, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :phone, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :phone, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :websites, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :websites, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :skills, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :skills, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
