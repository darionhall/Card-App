<body class = "cardcase">
  <div class="page-header">
    <%= link_to new_card_path, class: 'btn btn-primary' do %>
      <span class="glyphicon glyphicon-plus"></span>
      New Card
    <% end %>
    <h1>Here's Your Card(s)</h1>
  </div>
  <div class = "index card">
    <div class="table-responsive cards">
      <table class="table table-hover">
        <thead>
          <tr>
            <th>Card Name</th>
            <th>Show</th>
            <th>Edit</th>
            <th>Delete</th>
          </tr>
        </thead>

        <tbody>
          <%= content_tag_for(:tr, @cards) do |card| %>
            <td><%= card.card_name %></td>


            <td><%= link_to 'Show', card %></td>
            <td><%= link_to 'Edit', edit_card_path(card) %></td>
            <td><%= link_to 'Delete', card, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</body>
